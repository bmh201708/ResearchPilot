page {
  min-height: 100vh;
  background: linear-gradient(135deg, #eafaf7, #fff7ed, #fdf2f8);
}

.page {
  min-height: 100vh;
  padding: 80rpx 40rpx;
  box-sizing: border-box;
}

.card {
  background: #ffffff;
  border-radius: 30rpx;
  padding: 36rpx;
  box-shadow: 0 20rpx 45rpx rgba(0, 0, 0, 0.08);
}

.title {
  font-size: 40rpx;
  font-weight: 700;
  color: #111827;
  display: block;
}

.desc {
  margin-top: 14rpx;
  font-size: 24rpx;
  color: #6b7280;
  line-height: 1.6;
  display: block;
}

.avatar-btn {
  margin-top: 28rpx;
  height: 100rpx;
  border-radius: 20rpx;
  background: #f8fafc;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.avatar-img {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  margin-right: 14rpx;
}

.avatar-text {
  font-size: 26rpx;
  color: #111827;
}

.nickname-input {
  margin-top: 18rpx;
  height: 88rpx;
  border-radius: 18rpx;
  background: #f8fafc;
  padding: 0 20rpx;
  box-sizing: border-box;
  font-size: 26rpx;
}

.save-btn {
  margin-top: 22rpx;
  height: 92rpx;
  border-radius: 999rpx;
  background: linear-gradient(90deg, #2dd4bf, #f472b6);
  color: #ffffff;
  font-size: 28rpx;
  font-weight: 700;
  line-height: 92rpx;
}
