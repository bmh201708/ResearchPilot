page {
  min-height: 100vh;
  background: linear-gradient(135deg, #eefaf6, #fff9ef, #fdf1f6);
}

.page {
  min-height: 100vh;
  padding: 34rpx;
  box-sizing: border-box;
}

.hero {
  margin-bottom: 24rpx;
}

.title {
  display: block;
  font-size: 52rpx;
  font-weight: 800;
  color: #111827;
}

.desc {
  margin-top: 12rpx;
  display: block;
  font-size: 24rpx;
  color: #6b7280;
  line-height: 1.6;
}

.card,
.result-card {
  background: #fff;
  border-radius: 28rpx;
  padding: 28rpx;
  box-shadow: 0 14rpx 30rpx rgba(0, 0, 0, 0.07);
}

.upload-btn {
  border-radius: 999rpx;
  background: #f8fafc;
  color: #111827;
  font-size: 26rpx;
}

.file-meta {
  margin-top: 18rpx;
  background: #f8fafc;
  border-radius: 18rpx;
  padding: 16rpx;
}

.file-name {
  display: block;
  font-size: 24rpx;
  color: #111827;
  word-break: break-all;
}

.file-sub {
  display: block;
  margin-top: 8rpx;
  font-size: 22rpx;
  color: #6b7280;
}

.start-btn {
  margin-top: 22rpx;
  border-radius: 999rpx;
  background: linear-gradient(90deg, #2dd4bf, #f472b6);
  color: #fff;
  font-size: 28rpx;
  font-weight: 700;
}

.task-status {
  margin-top: 12rpx;
  display: block;
  font-size: 22rpx;
  color: #6b7280;
  text-align: center;
}

.result-card {
  margin-top: 22rpx;
}

.result-top {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 18rpx;
}

.decision {
  font-size: 34rpx;
  font-weight: 800;
  color: #0f766e;
}

.score {
  font-size: 24rpx;
  color: #111827;
  font-weight: 700;
}

.block {
  margin-top: 14rpx;
}

.block-title {
  display: block;
  font-size: 26rpx;
  color: #111827;
  font-weight: 700;
}

.block-text {
  margin-top: 8rpx;
  display: block;
  font-size: 24rpx;
  color: #374151;
  line-height: 1.6;
}

.item {
  margin-top: 8rpx;
  display: flex;
  align-items: flex-start;
}

.dot {
  font-size: 24rpx;
  color: #374151;
  margin-right: 10rpx;
  line-height: 1.5;
}

.item-text {
  flex: 1;
  font-size: 24rpx;
  color: #374151;
  line-height: 1.5;
}
