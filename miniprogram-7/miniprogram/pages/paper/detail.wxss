page {
  min-height: 100vh;
  background: linear-gradient(160deg, #f2faf8 0%, #fff2f5 50%, #fdfbf3 100%)
    no-repeat fixed;
}

.container {
  padding: 28rpx;
}

.state-text {
  margin-top: 80rpx;
  text-align: center;
  font-size: 28rpx;
  color: #666;
}

.state-error {
  color: #d62828;
}

.paper-wrap {
  display: flex;
  flex-direction: column;
  gap: 22rpx;
}

.badge-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.badge {
  font-size: 20rpx;
  color: #0f766e;
  background: #ccfbf1;
  padding: 8rpx 16rpx;
  border-radius: 999rpx;
  font-weight: 700;
}

.date-text {
  font-size: 22rpx;
  color: #6b7280;
}

.title {
  font-size: 42rpx;
  line-height: 1.35;
  font-weight: 800;
  color: #111827;
}

.meta-row {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.meta-item {
  background: #ffffff;
  border-radius: 18rpx;
  padding: 12rpx 16rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.meta-label {
  font-size: 20rpx;
  color: #6b7280;
}

.meta-value {
  font-size: 22rpx;
  color: #111827;
  font-weight: 700;
}

.venue {
  max-width: 380rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.04);
}

.card-title {
  font-size: 28rpx;
  font-weight: 700;
  color: #111827;
}

.card-content {
  margin-top: 16rpx;
  font-size: 26rpx;
  color: #374151;
  line-height: 1.6;
}

.link-text {
  margin-top: 14rpx;
  font-size: 22rpx;
  color: #0b57d0;
  line-height: 1.5;
  word-break: break-all;
}

.action-row {
  margin-top: 20rpx;
  display: flex;
  gap: 14rpx;
}

.action-btn {
  flex: 1;
  height: 78rpx;
  line-height: 78rpx;
  background: #e5e7eb;
  color: #111827;
  font-size: 24rpx;
  border-radius: 18rpx;
}

.action-btn-dark {
  background: #111827;
  color: #ffffff;
}

.tag-row {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.tag {
  background: #ecfeff;
  color: #155e75;
  padding: 8rpx 14rpx;
  border-radius: 999rpx;
  font-size: 20rpx;
}
