.page {
    min-height: 100vh;
    padding: 80rpx 48rpx;
    background: linear-gradient(135deg, #eafaf7, #fff7ed, #fdf2f8);
    background-image: radial-gradient(rgba(0,0,0,0.04) 1rpx, transparent 1rpx);
    background-size: 24rpx 24rpx;
    box-sizing: border-box;
    position: relative;
    overflow: hidden;
  }
  
  /* ===== 背景 blob ===== */
  .blob {
    position: absolute;
    filter: blur(80rpx);
    opacity: 0.18;
    z-index: 0;
  }
  
  .blob-teal {
    width: 400rpx;
    height: 400rpx;
    background: #2dd4bf;
    top: -120rpx;
    left: -120rpx;
  }
  
  .blob-pink {
    width: 360rpx;
    height: 360rpx;
    background: #f472b6;
    top: 120rpx;
    right: -140rpx;
  }
  
  .blob-yellow {
    width: 420rpx;
    height: 420rpx;
    background: #facc15;
    bottom: -160rpx;
    right: -120rpx;
  }
  
  /* ===== LOGO ===== */
  .logo-area {
    align-items: center;
    display: flex;
    flex-direction: column;
    position: relative;
    z-index: 1;
  }
  
  .logo-card {
    width: 150rpx;
    height: 150rpx;
    background: #fff;
    border-radius: 36rpx;
    box-shadow: 0 30rpx 60rpx rgba(0,0,0,0.12);
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }
  
  .icon {
    font-size: 64rpx;
  }
  
  .dot {
    position: absolute;
    border-radius: 50%;
  }
  
  .dot.yellow {
    width: 28rpx;
    height: 28rpx;
    background: #facc15;
    top: -10rpx;
    right: -10rpx;
  }
  
  .dot.teal {
    width: 20rpx;
    height: 20rpx;
    background: #2dd4bf;
    bottom: -6rpx;
    left: -10rpx;
  }
  
  .version {
    margin-top: 24rpx;
    padding: 10rpx 28rpx;
    background: rgba(255,255,255,0.7);
    border-radius: 999rpx;
    font-size: 22rpx;
    color: #6b7280;
    display: flex;
    align-items: center;
  }
  
  .pulse {
    width: 12rpx;
    height: 12rpx;
    background: #2dd4bf;
    border-radius: 50%;
    margin-right: 12rpx;
    animation: pulse 1.6s infinite;
  }
  
  @keyframes pulse {
    0% { opacity: 1; }
    50% { opacity: 0.3; }
    100% { opacity: 1; }
  }
  
  /* ===== 标题 ===== */
  .title {
    margin-top: 64rpx;
    text-align: center;
    font-size: 56rpx;
    font-weight: 700;
    position: relative;
    z-index: 1;
  }
  
  .gradient {
    background: linear-gradient(90deg, #2dd4bf, #f472b6);
    -webkit-background-clip: text;
    color: transparent;
  }
  
  .subtitle {
    margin-top: 24rpx;
    text-align: center;
    font-size: 26rpx;
    color: #6b7280;
    line-height: 1.6;
    z-index: 1;
    position: relative;
  }
  
  /* ===== 表单 ===== */
  .form {
    margin-top: 64rpx;
    z-index: 1;
    position: relative;
  }
  
  .input-box {
    background: rgba(255,255,255,0.75);
    border-radius: 28rpx;
    padding: 32rpx;
    margin-bottom: 24rpx;
    box-shadow: 0 14rpx 30rpx rgba(0,0,0,0.05);
    display: flex;
    align-items: center;
  }
  
  .placeholder {
    color: #9ca3af;
  }
  
  .forgot {
    text-align: right;
    font-size: 24rpx;
    color: #9ca3af;
    margin-bottom: 40rpx;
  }
  
  /* ===== 按钮 ===== */
  .btn {
    height: 96rpx;
    border-radius: 999rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 32rpx;
    font-weight: 600;
  }
  
  .primary {
    background: linear-gradient(90deg, #2dd4bf, #f472b6);
    color: #fff;
    box-shadow: 0 30rpx 60rpx rgba(244,114,182,0.35);
  }
  
  .secondary {
    margin-top: 24rpx;
    background: #fff;
    color: #374151;
    box-shadow: 0 20rpx 40rpx rgba(0,0,0,0.08);
  }
  
  /* ===== 第三方 ===== */
  .other {
    margin-top: 64rpx;
    text-align: center;
    position: relative;
    z-index: 1;
  }
  
  .other-text {
    font-size: 22rpx;
    color: #9ca3af;
  }
  
  .icons {
    margin-top: 24rpx;
    display: flex;
    justify-content: center;
    gap: 32rpx;
  }
  
  .icon {
    width: 88rpx;
    height: 88rpx;
    background: #fff;
    border-radius: 50%;
    box-shadow: 0 14rpx 30rpx rgba(0,0,0,0.1);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 32rpx;
  }
  