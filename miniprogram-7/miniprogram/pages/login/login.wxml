<view class="page">

<!-- 背景装饰 -->
<view class="blob blob-teal"></view>
<view class="blob blob-pink"></view>
<view class="blob blob-yellow"></view>

<!-- LOGO -->
<view class="logo-area">
  <view class="logo-card">
    <text class="icon">⚗️</text>

    <view class="dot yellow"></view>
    <view class="dot teal"></view>
  </view>

  <view class="version">
    <view class="pulse"></view>
    <text>CREATIVE LAB V1.0</text>
  </view>
</view>

<!-- 标题 -->
<view class="title">
  <text class="line">Start Your</text>
  <text class="line gradient">Research Journey</text>
</view>

<!-- 副标题 -->
<view class="subtitle">
  Your personal playground for academic
  discovery and neural optimization.
</view>

<!-- 表单 -->
<view class="form">

  <view class="input-box">
    <input
      placeholder="Academic Email"
      placeholder-class="placeholder"
    />
  </view>

  <view class="input-box">
    <input
      password
      placeholder="Password"
      placeholder-class="placeholder"
    />
  </view>

  <view class="forgot">Forgot Password?</view>

  <!-- 主按钮 -->
  <view class="btn primary" bindtap="onSignIn">
    <text>Sign In →</text>
  </view>

  <!-- 次按钮 -->
  <view class="btn secondary" bindtap="onCreate">
    <text>Create Account</text>
  </view>

</view>

<!-- 第三方 -->
<view class="other">
  <text class="other-text">Or continue with</text>
  <view class="icons">
    <view class="icon">G</view>
    <view class="icon">W</view>
  </view>
</view>

</view>
