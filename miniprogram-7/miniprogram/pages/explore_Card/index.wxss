/* pages/explore_Card/index.wxss */
/* 页面通用背景与字体 */
page {
    min-height: 100vh;
    background: linear-gradient(135deg, #e3faf4 0%, #fdeef2 50%, #fcfaf0 100%) no-repeat fixed;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
    box-sizing: border-box;
  }
  
  .container {
    padding: 40rpx 32rpx;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
  }
  
  /* --- 顶部导航 --- */
  .nav-bar {
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 40rpx;
  }
  
  .brand {
    display: flex;
    align-items: center;
    gap: 16rpx;
  }
  
  .brand-icon {
    width: 60rpx;
    height: 60rpx;
    background-color: #ff85a1; /* 这里是粉色图标背景 */
    border-radius: 16rpx;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .book-icon .line {
    width: 20rpx;
    height: 4rpx;
    background: white;
    margin: 4rpx 0;
    border-radius: 2rpx;
  }
  
  .brand-text {
    font-size: 24rpx;
    font-weight: 700;
    letter-spacing: 2rpx;
    color: #ff85a1;
  }
  
  .icon-btn {
    width: 80rpx;
    height: 80rpx;
    background: white;
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 10rpx 20rpx rgba(0,0,0,0.05);
  }
  
  .btn-image {
    width: 40rpx;
    height: 40rpx;
  }
  
  /* --- 大标题 --- */
  .page-header {
    width: 100%;
    margin-bottom: 48rpx;
    text-align: left;
  }
  
  .title-line {
    font-size: 80rpx;
    font-weight: 800;
    color: #1a1b2e;
    line-height: 1.1;
  }
  
  .highlight {
    background: linear-gradient(90deg, #38e0c6 0%, #d87ce8 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }
  
/* 新增 Swiper 容器样式 */
.paper-swiper {
    width: 100%;
    height: 950rpx; /* 根据卡片内容高度调整，确保 info-panel 不被遮挡 */
    margin-top: 20rpx;
  }
  
  /* 修改 main-card 适配滑动 */
  .main-card {
    width: 95%; /* 稍微缩小一点，配合 swiper 的 margin 产生层级感 */
    height: 100%;
    margin: 0 auto; /* 居中 */
    background: linear-gradient(135deg, #42dfd8 0%, #b363bb 100%);
    border-radius: 48rpx;
    padding: 40rpx;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    position: relative;
    box-shadow: 0 20rpx 40rpx rgba(66, 223, 216, 0.2);
  }
  
  /* 让不同序号的卡片颜色略有变化（可选，增强视觉区分） */
  swiper-item:nth-child(even) .main-card {
    background: linear-gradient(135deg, #6366f1 0%, #a855f7 100%);
  }
  
  .card-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  
  /* 优化作者文本显示，防止在卡片中过长显示不全 */
  .authors-value {
    font-size: 22rpx;
    color: #333;
    line-height: 1.4;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
  }
  
  /* 底部提示文字 */
  .swipe-hint {
    width: 100%;
    text-align: center;
    font-size: 20rpx;
    color: #a0a0b0;
    margin-top: 30rpx;
    font-weight: 600;
    letter-spacing: 2rpx;
  }
  
  .key-tag {
    background: rgba(255, 255, 255, 0.25);
    padding: 12rpx 24rpx;
    border-radius: 30rpx;
    color: white;
    font-size: 20rpx;
    font-weight: 700;
    display: flex;
    align-items: center;
    gap: 8rpx;
  }
  
  .bookmark {
    width: 86rpx;
    height: 86rpx;
    background: #ffffff; /* 纯白背景 */
    border-radius: 20rpx; /* 硬朗微圆角 */
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    color: #1a1b2e; /* 深色文字形成对比 */
    font-size: 28rpx;
    font-weight: 800;
    box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.15);
    transform: rotate(3deg); /* 微微旋转，增加设计感 */
  }
  
  .card-body {
    margin-top: 60rpx;
  }
  
  .main-title {
    color: white;
    font-size: 48rpx;
    font-weight: 800;
    line-height: 1.3;
    margin-bottom: 24rpx;
    display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
  }
  
  .sub-desc {
    color: rgba(255, 255, 255, 0.8);
    font-size: 26rpx;
    line-height: 1.5;
    /* 限制摘要最多 4 行，防止挤掉底部的 info-panel */
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 5;
  overflow: hidden;
  }
  
  /* 卡片内部操作面板 */
  .info-panel {
    background: white;
    border-radius: 40rpx;
    padding: 30rpx;
    margin-top: auto;
  }
  
  .panel-row {
    display: flex;
    align-items: center;
    margin-bottom: 30rpx;
  }
  
  .stat-item {
    flex: 1;
  }
  
  .divider {
    width: 2rpx;
    height: 60rpx;
    background: #eee;
    margin: 0 30rpx;
  }
  
  .stat-label {
    font-size: 18rpx;
    font-weight: 700;
    color: #a0a0b0;
    display: block;
    margin-bottom: 8rpx;
  }
  
  .stat-value {
    font-size: 36rpx;
    font-weight: 800;
    color: #38e0c6;
  }
  
  .stat-value .unit {
    font-size: 24rpx;
    font-weight: 600;
  }
  
  .rating-box {
    display: flex;
    align-items: center;
    gap: 12rpx;
  }
  
  .progress-mini {
    width: 120rpx;
    height: 12rpx;
    background: #f0f0f5;
    border-radius: 6rpx;
    overflow: hidden;
  }
  
  .progress-mini .fill {
    height: 100%;
    background: #ff85a1;
  }
  
  .rating-text {
    font-size: 24rpx;
    font-weight: 700;
    color: #ff85a1;
  }

  .paper-like-btn {
    margin-bottom: 16rpx;
    background: #f6f7fb;
    color: #39485d;
    height: 72rpx;
    border-radius: 20rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 22rpx;
    font-weight: 700;
  }

  .paper-like-btn.active {
    background: #ffdce7;
    color: #c91f5d;
  }
  
  .full-summary-btn {
    background: #6366f1;
    color: white;
    height: 90rpx;
    border-radius: 24rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 16rpx;
    font-size: 24rpx;
    font-weight: 700;
  }
  

  .pink { background: #ff85a1; }
  .teal { background: #38e0c6; }

  .search-panel {
    width: 100%;
    display: flex;
    align-items: center;
    gap: 20rpx;
    margin-bottom: 16rpx;
  }
  
  
  .search-input {
    flex: 2;
    height: 86rpx;
    background: #ffffff;
    border-radius: 24rpx;
    padding: 0 28rpx;
    font-size: 26rpx;
    box-sizing: border-box;
  }
  
  .search-btn {
    flex: 1;
    height: 86rpx;
    min-width: 160rpx; /* 稍微加宽一点以匹配图片比例 */
    padding: 0 28rpx;
    /* 修改为全圆角胶囊形状 */
    border-radius: 43rpx; 
    /* 使用从左到右的渐变色：青绿 -> 蓝色 */
    background: linear-gradient(to right, #29d7cb, #6da9e5);
    color: #ffffff;
    font-size: 28rpx; /* 略微调大字号 */
    font-weight: 600;
    line-height: 86rpx;
    /* 去除小程序按钮默认边框 */
    border: none;
    /* 添加轻微的阴影让它更有悬浮感（可选） */
    box-shadow: 0 4rpx 12rpx rgba(109, 169, 229, 0.3);
  }

  .search-meta {
    margin-bottom: 10rpx;
  }

  .search-meta-text {
    font-size: 22rpx;
    color: #6d6d7a;
  }

  .search-warning {
    margin-bottom: 26rpx;
    font-size: 22rpx;
    color: #f97316;
  }

  .state-text {
    width: 100%;
    margin: 36rpx 0;
    text-align: center;
    font-size: 26rpx;
    color: #666;
  }

  .state-error {
    color: #d62828;
  }

  .authors-value {
    font-size: 22rpx;
    color: #333;
    line-height: 1.4;
  }

